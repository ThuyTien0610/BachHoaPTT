@model BachHoaPTT.Models.LayMaXacNhan
@{
    ViewBag.Title = "LayMaXacNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="hero-wrap hero-bread" style="background-image: url('../../Images/bg_1.jpg');">
        <div class="container register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                    <h3>Chào mừng</h3>
                    <p>Đến với bách hóa PTT</p>
                </div>
                <div class="col-md-9 register-right">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row register-form">
                                <div class="col-md-6">
                                    <div class="dkdnpage">
                                        <div class="form-horizontal">
                                            <hr />
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Code, htmlAttributes: new { @class = "fas fa-envelope" })
                                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", style = "height:50px;" } })
                                                @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <input type="submit" value="Lấy lại mật khẩu" class="btn btn-lg btn-primary btn-block" />
                                            </div>

                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

