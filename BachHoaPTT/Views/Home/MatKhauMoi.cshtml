
@{
    ViewBag.Title = "MatKhauMoi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="hero-wrap hero-bread" style="background-image: url('../../Images/bg_1.jpg');">
        <div class="container register">
            <div class="row">
                <div class="col-md-3 register-left">
                    <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
                    <h3>Chào mừng</h3>
                    <p>Đến với bách hóa PTT</p>
                </div>
                <div class="col-md-9 register-right">
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="row register-form">
                                <div class="col-md-6">
                                    <div class="dkdnpage">
                                        <div class="form-horizontal">
                                            <hr />
                                            <div class="form-group">
                                                <div class="input-with-label">
                                                    <div class="input-with-label__wrapper">
                                                        <div class="input-with-label__label"><label>Mật khẩu mới</label></div>
                                                        <div class="input-with-label__content">
                                                            <div class="input-with-validator-wrapper">
                                                                <div class="input-with-validator"><input type="password" required placeholder="Mật khẩu mới" name="matkhaumoi" id="matkhaumoi" style="width: 400px; height: 50px"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="input-with-label">
                                                    <div class="input-with-label__wrapper">
                                                        <div class="input-with-label__label"><label>Nhập lại mật khẩu</label></div>
                                                        <div class="input-with-label__content">
                                                            <div class="input-with-validator-wrapper">
                                                                <div class="input-with-validator"><input type="password" required placeholder="Nhập lại mật khẩu mới" name="nhaplaimatkhaumoi" id="nhaplaimatkhaumoi" style="width: 400px; height: 50px"></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @if (ViewBag.Check != null)
                                            {
                                                <div class="form-group">
                                                   <h3>Xác thực mật khẩu chưa đúng</h3>
                                                </div>
                                            }
                                            <div class="form-group">
                                                <input type="submit" value="Đổi mật khẩu" class="btn btn-lg btn-primary btn-block" />
                                            </div>


                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

