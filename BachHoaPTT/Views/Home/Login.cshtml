@model BachHoaPTT.Models.LoginView

@{
    ViewBag.Title = "Đăng nhập - Bách hoá PTT";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="hero-wrap hero-bread" style="background-image: url('../../Images/bg_1.jpg');">
        <div class="container">
            <div class="d-flex justify-content-center h-100">
                <div class="card">
                    <div class="card-header">
                        <h3>Đăng nhập</h3>
                    </div>
                    <div class="card-body">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.Sdt, "", new { @class = "text-danger" })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            @Html.EditorFor(model => model.Sdt, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên đăng nhập" } })

                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = "Mật khẩu" } })

                        </div>
                        <div class="form-group">
                            <input type="submit" value="Đăng nhập" class="btn float-right login_btn" style="color:yellow !important;">
                        </div>
                    </div>
                    @*<div class="form-group">
                            @Html.LabelFor(model => model.KiemTra, htmlAttributes: new { @class = "control-label col-md-2" })
                            @Html.LabelFor(model => model.KiemTra, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.KiemTra, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.KiemTra, "", new { @class = "text-danger" })
                            </div>
                        </div>*@
                    <div class="card-footer">
                        <div class="d-flex justify-content-center links">
                            <label style="color:yellow;">Chưa có tài khoản?</label> <a href="~/Home/Register"> Đăng kí</a>
                        </div>
                        <div class="d-flex justify-content-center links">
                            <a href="~/Home/QuenMatKhau">Quên mật khẩu?</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

