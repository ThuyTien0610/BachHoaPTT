@model BachHoaPTT.Models.SanPham


@{
    ViewBag.Title = @Model.TenSanPham + " - Bách Hoá PTT";
    Layout = "~/Areas/Customer/Views/Shared/_Layout.cshtml";
}
<section class="ftco-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-5 ftco-animate">
                <a href=@Url.Content("~/Images/"+Model.HinhAnh+".jpg") class="image-popup"><img src=@Url.Content("~/Images/"+Model.HinhAnh+".jpg") class="img-fluid" alt="Colorlib Template"></a>
            </div>
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                <h3> @Model.TenSanPham</h3>
                <div class="rating d-flex">
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2">5.0</a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                    </p>
                    <p class="text-left mr-4">&nbsp; </p>
                    <p class="text-left">&nbsp; </p>
                </div>
                <p class="price"><span>@Model.Gia đ</span></p>
                <p>@Model.MoTa <p>


                <p> <b>THÔNG TIN SẢN PHẨM</b></p>

                <p>Xuất xứ: Công Ty TNHH Đà Lạt G.A.P</p>

                <p>Quy cách: 1kg/Túi</p>

                <p>Đơn vị tính: Túi</p>

                <p>Sử dụng: Chế biến món tùy thích</p>

                <p>Bảo quản: Bảo quản nơi khô ráo thoáng mát</p>

                </p>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="form-group d-flex">
                            <div class="select-wrap">
                                <div class="icon"></div>
                            </div>
                        </div>
                    </div>
                    <div class="w-100"></div>
                    <div class="input-group col-md-6 d-flex mb-3">
                        <span class="input-group-btn mr-2">
                            <button type="button" class="quantity-left-minus btn" data-type="minus" data-field="">
                                <i class="ion-ios-remove"></i>
                            </button>
                        </span>
                        <input type="text" id="quantity" name="quantity" class="form-control input-number" value="1" min="1" max="100">
                        <span class="input-group-btn ml-2">
                            <button type="button" class="quantity-right-plus btn" data-type="plus" data-field="">
                                <i class="ion-ios-add"></i>
                            </button>
                        </span>
                    </div>
                    <div class="w-100"></div>

                </div>
                <p>
                    <button id=@Model.Id class="add-to-cart btn" onclick="tbmuahang(this.id)">
                        <i class="glyphicon glyphicon-shopping-cart"></i> THÊM VÀO GIỎ HÀNG
                    </button>
                </p>
            </div>
        </div>
    </div>
</section>

<div class="gototop">
    <button onclick="topFunction()" id="myBtn" title="Về đầu trang"> <i class="fas fa-arrow-up"></i></button>
</div>
<script type="text/javascript">
    function tbmuahang(idsp) {
        $.ajax({
            type: "POST",
            url: "../ThemSanPham",
            data: JSON.stringify({ id: idsp }),
            contentType: "application/json",

            success: function (result) {
                alert("  " + result.valu + "  ");
            }
        })
    }
</script>
<script>
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>

